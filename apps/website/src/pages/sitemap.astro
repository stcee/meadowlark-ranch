---
import ContentPageLayout from '../layouts/ContentPageLayout.astro';

const sitePages = [
  {
    heading: 'About Us',
    links: [
      { label: 'About Meadowlark Ranch', href: '/about' },
      { label: 'Mission & Vision', href: '/mission-vision' },
      { label: 'History', href: '/history' },
      { label: 'Stewardship & Responsibility', href: '/stewardship' },
      { label: 'Leadership', href: '/leadership' },
      { label: 'Sponsorships', href: '/sponsorships' },
      { label: 'Partnerships', href: '/partnerships' },
    ],
  },
  {
    heading: 'Events',
    links: [
      { label: 'Weddings', href: '/weddings' },
      { label: 'Special Occasions', href: '/special-occasions' },
      { label: 'Event Planning Services', href: '/planning-services' },
      { label: 'Carriage Services', href: '/carriage-services' },
      { label: 'Team Building', href: '/team-building' },
      { label: 'Corporate Events', href: '/corporate-events' },
      { label: 'Private Events', href: '/private-events' },
    ],
  },
  {
    heading: 'Equine',
    links: [
      { label: 'Western States Classic', href: '/western-states-classic' },
      { label: 'Meadowlark Ranch Too', href: '/meadowlark-ranch-too' },
    ],
  },
  {
    heading: 'Equine Services',
    links: [
      { label: 'Horse Boarding', href: '/horse-boarding' },
      { label: 'Horse Transport', href: '/horse-transport' },
    ],
  },
  {
    heading: 'Local Area',
    links: [
      { label: 'Local Restaurants', href: '/local-restaurants' },
      { label: 'Local Attractions', href: '/local-attractions' },
    ],
  },
  {
    heading: 'Information',
    links: [
      { label: 'Contact Us', href: '/contact' },
      { label: 'Directions', href: '/directions' },
    ],
  },
];
---

<ContentPageLayout
  title="Sitemap"
  description="Browse the complete sitemap of Meadowlark Ranch â€” find every page on our website including events, equine services, local area guides, and more."
  heroLabel="Navigation"
  heroImage="/images/ranch-photo-1.webp"
  breadcrumbs={[{label: 'Home', href: '/'}, {label: 'Sitemap'}]}
>
  <section class="content-section section--cream">
    <div class="container" style="text-align: center; max-width: 800px;">
      <h2>All Pages</h2>
      <p class="content-section__text">Use this page to find everything on the Meadowlark Ranch website. All pages are organized by category for easy navigation.</p>
    </div>
  </section>

  <section class="content-section section--white">
    <div class="container">
      <div class="sitemap-home">
        <a href="/" class="sitemap-home__link">Home</a>
      </div>
      <div class="sitemap-grid">
        {sitePages.map((section) => (
          <div class="sitemap-section">
            <h3 class="sitemap-section__heading">{section.heading}</h3>
            <ul class="sitemap-section__list">
              {section.links.map((link) => (
                <li>
                  <a href={link.href}>{link.label}</a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>
</ContentPageLayout>

<style>
  .sitemap-home {
    text-align: center;
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  .sitemap-home__link {
    font-family: var(--font-heading, serif);
    font-size: 1.25rem;
    color: var(--color-primary, #2c1810);
    text-decoration: none;
    font-weight: 600;
  }

  .sitemap-home__link:hover {
    color: var(--color-accent, #8b6914);
  }

  .sitemap-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2.5rem;
  }

  .sitemap-section__heading {
    font-family: var(--font-heading, serif);
    font-size: 1.15rem;
    color: var(--color-primary, #2c1810);
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-accent, #8b6914);
  }

  .sitemap-section__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sitemap-section__list li {
    padding: 0.4rem 0;
  }

  .sitemap-section__list a {
    color: var(--color-text, #4a4a4a);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .sitemap-section__list a:hover {
    color: var(--color-accent, #8b6914);
    text-decoration: underline;
  }
</style>
