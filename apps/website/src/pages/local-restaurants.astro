---
import ContentPageLayout from '../layouts/ContentPageLayout.astro';
import restaurantData from '../data/restaurants.json';

const restaurants = restaurantData.restaurants;
---

<ContentPageLayout
  title="Local Restaurants"
  description="Discover the best restaurants near Meadowlark Ranch â€” from fine dining to craft breweries, explore Longmont and Boulder County's vibrant culinary scene."
  heroLabel="Local Area"
  heroImage="/images/fire-chat.webp"
  breadcrumbs={[{label: 'Home', href: '/'}, {label: 'Local Area'}, {label: 'Restaurants'}]}
  cta={{title: 'Plan Your Visit', text: 'Need help planning dining for your event or stay? Our team is happy to make recommendations and reservations.', buttonText: 'Contact Us', buttonLink: '/contact'}}
>
  <section class="content-section section--cream">
    <div class="container" style="text-align: center; max-width: 800px;">
      <h2>Dining Near Meadowlark Ranch</h2>
      <p class="content-section__text">Boulder County's culinary scene is as vibrant and diverse as its landscape. Whether you are looking for a fine-dining experience, a casual family meal, or a craft beer tasting, these local favorites are all within a short drive of Meadowlark Ranch.</p>
    </div>
  </section>

  <section class="content-section section--white">
    <div class="container">
      <div class="restaurant-grid">
        {restaurants.map((restaurant) => (
          <div class={`restaurant-card ${restaurant.featured ? 'restaurant-card--featured' : ''}`}>
            <div class="restaurant-card__header">
              <h3 class="restaurant-card__name">{restaurant.name}</h3>
              <span class="restaurant-card__price">{restaurant.priceRange}</span>
            </div>
            <p class="restaurant-card__cuisine">{restaurant.cuisine}</p>
            <p class="restaurant-card__description">{restaurant.description}</p>
            <div class="restaurant-card__meta">
              <span class="restaurant-card__distance">{restaurant.distanceFromRanch} from ranch</span>
            </div>
            <div class="restaurant-card__tags">
              {restaurant.tags.map((tag: string) => (
                <span class="restaurant-card__tag">{tag}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="content-section section--cream">
    <div class="container" style="text-align: center; max-width: 800px;">
      <h2>Dining for Your Event</h2>
      <p class="content-section__text">Hosting an event at Meadowlark Ranch? Our planning team can coordinate dining experiences at any of these local establishments for your guests, or arrange on-site catering that showcases the best of Colorado cuisine. Contact us for custom dining recommendations.</p>
    </div>
  </section>
</ContentPageLayout>

<style>
  .restaurant-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 2rem;
  }

  .restaurant-card {
    background: var(--color-white, #fff);
    border-radius: 12px;
    padding: 1.75rem;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .restaurant-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
  }

  .restaurant-card--featured {
    border-left: 4px solid var(--color-accent, #8b6914);
  }

  .restaurant-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.25rem;
  }

  .restaurant-card__name {
    font-family: var(--font-heading, serif);
    font-size: 1.2rem;
    color: var(--color-primary, #2c1810);
    margin: 0;
  }

  .restaurant-card__price {
    font-weight: 600;
    color: var(--color-accent, #8b6914);
    font-size: 0.9rem;
    white-space: nowrap;
    margin-left: 1rem;
  }

  .restaurant-card__cuisine {
    font-size: 0.85rem;
    color: var(--color-accent, #8b6914);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .restaurant-card__description {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-text, #4a4a4a);
    flex: 1;
  }

  .restaurant-card__meta {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
  }

  .restaurant-card__distance {
    font-size: 0.85rem;
    color: var(--color-text-light, #777);
  }

  .restaurant-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .restaurant-card__tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: var(--color-primary-light, #f5f0e8);
    border-radius: 100px;
    font-size: 0.75rem;
    color: var(--color-primary, #2c1810);
    text-transform: lowercase;
  }
</style>
