---
import ContentPageLayout from '../layouts/ContentPageLayout.astro';
import ContactForm from '../components/react/ContactForm';
---

<ContentPageLayout
  title="Contact Us"
  description="Get in touch with Meadowlark Ranch â€” inquire about events, equine services, tours, sponsorships, or plan your visit to Boulder County, Colorado."
  heroLabel="Get in Touch"
  heroImage="/images/ranch-photo-1.webp"
  breadcrumbs={[{label: 'Home', href: '/'}, {label: 'Contact Us'}]}
>
  <section class="content-section section--cream">
    <div class="container" style="text-align: center; max-width: 800px;">
      <h2>We Would Love to Hear From You</h2>
      <p class="content-section__text">Whether you are planning an event, inquiring about equine services, interested in sponsorship opportunities, or simply want to learn more about Meadowlark Ranch, our team is here to help. Fill out the form below and we will respond within one business day.</p>
    </div>
  </section>

  <section class="content-section section--white">
    <div class="container">
      <div class="contact-layout">
        <div class="contact-form-wrapper">
          <ContactForm client:visible />
        </div>
        <div class="contact-info">
          <div class="contact-info__block">
            <h3>Meadowlark Ranch</h3>
            <div class="contact-info__item">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <div>
                <p>5384 St Vrain Rd</p>
                <p>Longmont, CO 80503</p>
              </div>
            </div>
            <div class="contact-info__item">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
              <a href="mailto:info@meadowlarkranch.com">info@meadowlarkranch.com</a>
            </div>
          </div>

          <div class="contact-info__block">
            <h3>Quick Links</h3>
            <ul class="contact-info__links">
              <li><a href="/weddings">Wedding Inquiries</a></li>
              <li><a href="/corporate-events">Corporate Events</a></li>
              <li><a href="/horse-boarding">Horse Boarding</a></li>
              <li><a href="/sponsorships">Sponsorship Opportunities</a></li>
              <li><a href="/partnerships">Partnership Programs</a></li>
              <li><a href="/directions">Directions &amp; Parking</a></li>
            </ul>
          </div>

          <div class="contact-info__block">
            <h3>Response Times</h3>
            <p class="contact-info__text">We aim to respond to all inquiries within one business day. For urgent matters, please call us directly. Event inquiries may require additional time for our team to prepare a detailed proposal.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</ContentPageLayout>

<style>
  .contact-layout {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  @media (max-width: 860px) {
    .contact-layout {
      grid-template-columns: 1fr;
    }
  }

  .contact-form-wrapper {
    background: var(--color-white, #fff);
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.08);
  }

  .contact-info__block {
    margin-bottom: 2rem;
  }

  .contact-info__block h3 {
    font-family: var(--font-heading, serif);
    font-size: 1.15rem;
    color: var(--color-primary, #2c1810);
    margin-bottom: 1rem;
  }

  .contact-info__item {
    display: flex;
    gap: 0.75rem;
    align-items: flex-start;
    margin-bottom: 0.75rem;
  }

  .contact-info__item svg {
    flex-shrink: 0;
    color: var(--color-accent, #8b6914);
    margin-top: 2px;
  }

  .contact-info__item p {
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.5;
    color: var(--color-text, #4a4a4a);
  }

  .contact-info__item a {
    color: var(--color-accent, #8b6914);
    text-decoration: none;
    font-size: 0.95rem;
  }

  .contact-info__item a:hover {
    text-decoration: underline;
  }

  .contact-info__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .contact-info__links li {
    padding: 0.4rem 0;
  }

  .contact-info__links a {
    color: var(--color-accent, #8b6914);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .contact-info__links a:hover {
    color: var(--color-primary, #2c1810);
    text-decoration: underline;
  }

  .contact-info__text {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-text, #4a4a4a);
  }
</style>
