---
import navigationData from '@data/navigation.json';
import siteConfig from '@data/site-config.json';

const { footer } = navigationData;
---

<footer class="footer">
  <div class="footer__top">
    <div class="container">
      <h2 class="footer__tagline">We ride together.</h2>

      <div class="footer__grid">
        {footer.columns.map((column: any) => (
          <div class="footer__column">
            <h3 class="footer__column-title">{column.heading}</h3>
            <div class="footer__links">
              {column.links.map((link: any) => (
                <a href={link.href} class="footer__link">{link.label}</a>
              ))}
            </div>
          </div>
        ))}
      </div>

      <div class="footer__contact-row">
        <div class="footer__contact-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"></path></svg>
          <a href={`tel:${siteConfig.locations.main.phone}`}>{siteConfig.locations.main.phone}</a>
        </div>
        <div class="footer__contact-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
          <a href={`mailto:${siteConfig.locations.main.email}`}>{siteConfig.locations.main.email}</a>
        </div>
      </div>

      <div class="footer__social">
        <a href={siteConfig.social.facebook} target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="footer__social-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path></svg>
        </a>
        <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="footer__social-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
        </a>
        <a href={siteConfig.social.youtube} target="_blank" rel="noopener noreferrer" aria-label="YouTube" class="footer__social-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"></path></svg>
        </a>
      </div>

      <div class="footer__logo">
        <img src="/images/horse-footer.gif" alt="Meadowlark Ranch Horse" style="height: 80px;">
      </div>
    </div>
  </div>

  <div class="footer__bottom">
    <img src="/images/horses-running.webp" alt="" class="footer__bottom-bg">
    <div class="container">
      <div class="footer__bottom-content">
        <div class="footer__brand">
          <img src="/images/meadowlark-ranch-text-gold.png" alt="Meadowlark Ranch" class="footer__brand-img">
        </div>
      </div>
    </div>
  </div>

  <div class="footer__copyright">
    <div class="container">
      <p>&copy; {siteConfig.copyright} | <a href="/sitemap">Sitemap</a></p>
    </div>
  </div>
</footer>
