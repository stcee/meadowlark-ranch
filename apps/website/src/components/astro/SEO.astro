---
/**
 * SEO.astro
 * SEO meta tags component for the <head>. Renders title, description,
 * canonical URL, Open Graph tags, and Twitter card meta.
 * Use in the "seo" named slot of BaseLayout/PageLayout.
 */

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  ogImage?: string;
  type?: 'website' | 'article';
}

const {
  title,
  description,
  canonicalUrl,
  ogImage,
  type = 'website',
} = Astro.props;

const fullTitle = `${title} | Meadowlark Ranch`;
const siteName = 'Meadowlark Ranch';
const siteUrl = 'https://meadowlarkranch.com';
const resolvedCanonical = canonicalUrl || `${siteUrl}${Astro.url.pathname}`;
const resolvedOgImage = ogImage || `${siteUrl}/images/slider-1.webp`;
---

<!-- Canonical URL -->
<link rel="canonical" href={resolvedCanonical} />

<!-- Open Graph -->
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:type" content={type} />
<meta property="og:site_name" content={siteName} />
<meta property="og:url" content={resolvedCanonical} />
<meta property="og:image" content={resolvedOgImage} />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={resolvedOgImage} />
